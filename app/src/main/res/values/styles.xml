<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/arrived_destination_color</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="tweetName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="summaryText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="summarySmall">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
    </style>

    <style name="LineH_Fill_Width0_5_ForView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Yellow_Fill_Width1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:background">#ffb929</item>
    </style>

    <style name="LineV_Fill_Width0_5_ForView">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Fill_Width1_5_ForView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineH_Fill_Height0_5_ForView">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineV_Fill_Width1">
        <item name="android:layout_width">1.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
    </style>

    <style name="LineV_Fill_Width2">
        <item name="android:layout_width">2dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_grey_bg</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

    <style name="TextColor_Blue_16">
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextColor_Grey_18">
        <item name="android:textColor">@color/darkgrey1</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="TextColor_YellowDark_14">
        <item name="android:textColor">@color/text_color_yellow_dark</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Login_Button_Style">
        <item name="android:background">@drawable/button_style_blue</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColor_Blue_16_click">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16.0dip</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
