<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_address_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/address_map_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:src="@mipmap/address_icon2" />

    <LinearLayout
        android:id="@+id/address_center_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/address_map_icon"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/receipt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/receipt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="13262253731"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/receipt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_center_lv"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/address_map_icon"
        android:paddingRight="@dimen/dp_15"
        android:text="上海市 普陀区耀光中环国际大厦 15楼"
        android:textColor="@color/color333"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>
