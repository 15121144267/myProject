<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_address_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/address_map_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_40"
        android:src="@mipmap/address_icon2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receipt_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/receipt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/receipt_user_tv"
            android:text="@string/app_default_des"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/receipt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/app_default_des"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/receipt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receipt_user_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/app_default_des"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>


</LinearLayout>
