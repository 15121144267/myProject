<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exchange_lv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hot_fair_pic"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/hot_fair_time_name"
            style="@style/TextColor_Black_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="未知" />

        <TextView
            android:id="@+id/hot_fair_time_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="未知"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/adapter_fair_summary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未知"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/hot_fair_time_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="未知"
            android:textColor="#666666"
            android:visibility="gone"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

</LinearLayout>