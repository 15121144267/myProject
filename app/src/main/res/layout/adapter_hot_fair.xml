<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/dp_20"
              android:layout_marginEnd="@dimen/dp_20"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="18dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/hot_fair_pic"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/hot_fair_time_name"
            style="@style/TextColor_Black_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="暴走的萝莉：我的运动"/>

        <TextView
            android:id="@+id/hot_fair_time_first"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日期：9月20日"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/adapter_fair_summary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="暴走的萝莉：我的运动，始于一身衣服"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            />

        <TextView
            android:id="@+id/hot_fair_time_second"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="日期：9月20日"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

</LinearLayout>