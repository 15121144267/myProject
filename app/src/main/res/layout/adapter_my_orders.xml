<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:drawableEnd="@mipmap/order_arrow_right"
        android:drawableStart="@mipmap/order_shop_name"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="&#160;&#160; 梅子熟了"
        android:textColor="@color/darkblack"/>

    <View style="@style/LineH_Fill_Width1_5_ForView"/>

    <TextView
        android:id="@+id/adapter_order_status"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:drawableStart="@mipmap/order_already_out"
        android:gravity="center_vertical"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="&#160;&#160;已出库"
        android:textColor="@color/darkblack"/>

    <View style="@style/LineH_Fill_Width1_5_ForView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/line_grey_bg3"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/adapter_person_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/shape_rectangle_icon2"
            android:scaleType="fitXY"
            android:src="@mipmap/neo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="19dp"
            android:layout_marginStart="21dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连衣裙"
                android:textColor="@color/darkblack"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/product_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="价代发看来发送到价代发看来发送到"
                    android:textColor="@color/light_grey_dark"
                    />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥50"
                    android:textColor="@color/darkblack"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/product_info2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="价代发看来发送到"
                    android:textColor="@color/light_grey_dark"
                    />

                <TextView
                    android:id="@+id/product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x50"
                    android:textColor="@color/darkblack"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineH_Fill_Width1_5_ForView"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingEnd="19dp">

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:text="合计：500"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/order_price"
            android:text="数量：500"
            android:textColor="@color/light_grey_dark"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View style="@style/LineH_Fill_Width1_5_ForView"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        android:paddingEnd="19dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/order_for_pay"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_line_bold_blue"
            android:gravity="center"
            android:visibility="gone"
            android:text="去支付"
            android:textColor="#35bbc6"
            />

        <TextView
            android:id="@+id/order_pull_off"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_line_bold_blue"
            android:gravity="center"
            android:text="延长收货"
            android:textColor="#35bbc6"
            />

        <TextView
            android:id="@+id/order_pull_sure"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_line_bold_blue"
            android:gravity="center"
            android:text="确定收货"
            android:textColor="#35bbc6"
            />
    </LinearLayout>

    <View style="@style/LineH_Fill_Width_5_ForView"/>
</LinearLayout>