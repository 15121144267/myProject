<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recharge_dialog_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#90000000">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="14dp"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥239"
                android:textColor="@color/light_blue_dark"
                android:textSize="@dimen/sp_20"/>

            <ImageView
                android:id="@+id/dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:src="@mipmap/dialog_close"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="142dp"
            android:layout_marginTop="8dp"
            android:layout_weight="wrap_content"
            android:text="库存307件"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="142dp"
            android:layout_marginTop="11dp"
            android:layout_weight="wrap_content"
            android:text="已选图片色"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>

        <View
            style="@style/LineH_Fill_Width1_ForView"
            android:layout_marginEnd="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textColor="@color/darkblack"/>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginEnd="33dp"
                android:layout_marginStart="42dp"
                android:background="@drawable/shape_line_blod"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_weight="1"
                    android:text="—"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="颜色分类"
            android:textColor="@color/black"/>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>

        <View
            style="@style/LineH_Fill_Width1_ForView"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:text="尺寸"
            android:textColor="@color/black"/>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/goods_detail_button"
        style="@style/order_detail_Button_Style4"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_5"
        android:text="立刻购买"
        />

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/dialog_person_icon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="280dp"
        android:src="@mipmap/neo"
        app:siShape="@drawable/shape_rectangle_icon2"
        app:siSquare="true"/>
</RelativeLayout>