<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/LineH_Fill_Width_12_ForView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/adapter_comment_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/person_head_icon"/>

        <TextView
            android:id="@+id/adapter_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="名字"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_text_normal"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="未知"/>

    <TextView
        android:id="@+id/adapter_comment_time"
        style="@style/TextColor_grey_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/color666"
        android:text="未知"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_line_white">

            <TextView
                android:id="@+id/adapter_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/praise_icon"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:drawablePadding="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text="点赞"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>