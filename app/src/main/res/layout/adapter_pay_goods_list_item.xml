<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/adapter_shopping_card_item_icon"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:background="@drawable/shape_rectangle_icon2"
            android:scaleType="centerCrop"
            android:src="@mipmap/freemud_logo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adapter_shopping_card_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/app_default_des"
                android:textColor="@color/darkblack"
                android:textSize="@dimen/sp_14"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/adapter_shopping_card_item_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ï¿¥0.00"
                    android:textColor="@color/light_red"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/adapter_shopping_card_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textColor="@color/darkblack"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/LineH_Fill_Width1_5_ForView"/>
</LinearLayout>