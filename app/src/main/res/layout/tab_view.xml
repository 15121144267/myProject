<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

    <TextView
        android:id="@+id/good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="价格"/>

    <ImageView
        android:id="@+id/price_up"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/good_price"
        android:background="@mipmap/price_up"/>

    <ImageView
        android:id="@+id/price_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_up"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/good_price"
        android:background="@mipmap/price_low"/>
</RelativeLayout>