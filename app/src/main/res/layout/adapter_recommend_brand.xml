<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_common_icon"
        android:layout_width="180dp"
        android:layout_height="122dp"
        android:background="@drawable/shape_gray"
        />

    <TextView
        android:id="@+id/adapter_recommend_text"
        style="@style/TextColor_Black_15"
       android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="浮屠市集浮"
        />

    <TextView
        android:id="@+id/adapter_common_text"
        style="@style/TextColor_Grey_12"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="浮屠市集浮屠市集浮屠市集浮屠市集浮屠市集浮屠市集"
        />
    <TextView
        android:id="@+id/adapter_common_price"
        style="@style/TextColor_red_14"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥44.0"
        />
</LinearLayout>