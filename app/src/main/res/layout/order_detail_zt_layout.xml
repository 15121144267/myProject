<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_zt_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/order_detail_zt_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@mipmap/freemud_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/order_detail_zt_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_detail_zt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_default_des"
            android:textColor="@color/color333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_detail_zt_code"
            android:layout_marginTop="@dimen/dp_10"
            android:text="请凭提货码到店内领取商品"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


</RelativeLayout>
