<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <LinearLayout
        android:id="@+id/join_action_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_white_round_10"
        android:gravity="center_horizontal"
        android:minHeight="300dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="@dimen/dp_60">

        <TextView
            android:id="@+id/join_action_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxLines="1"
            android:text="活动报名标题"
            android:textColor="@color/tab_text_normal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/join_action_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dp_10"
            android:text="时间：2017-11-23"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/join_action_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/dp_10"
            android:text="地点：绿地中心半生缘潮流街区"
            android:textColor="@color/color666"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/join_action_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="￥0.00"
            android:textColor="@color/light_red"
            android:textSize="36sp" />

        <View style="@style/LineH_Yellow_Fill_Width1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="手机号:"
                android:textColor="@color/color666"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/round_phone_bg">

                <EditText
                    android:id="@+id/join_action_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="123456789"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancal_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_blue7"
                android:text="取消" />

            <Button
                android:id="@+id/sure_btn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_weight="1"
                android:background="@drawable/button_style_blue6_rightangle"
                android:text="确认报名" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/horn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/join_action_lv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:src="@mipmap/horn" />

</RelativeLayout>