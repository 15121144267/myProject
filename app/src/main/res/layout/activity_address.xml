<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_grey_bg2"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common" />

    <View style="@style/LineH_Fill_Width1_5_ForView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/address_add"
        style="@style/order_detail_Button_Style"
        android:background="@drawable/gradient_style_pink"
        android:textColor="@color/new_order_color"
        android:text="添加新地址" />
</LinearLayout>