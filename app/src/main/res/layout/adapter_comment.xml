<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_15"
    android:paddingEnd="@dimen/dp_20"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/adapter_comment_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/order_detail_icon"/>

        <TextView
            android:id="@+id/adapter_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="名字名字"/>
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_comment_content"
        style="@style/TextColor_dark_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="今天买了好多东西哦今天买了好多东西哦今天买了好多东西哦"/>

    <TextView
        android:id="@+id/adapter_comment_time"
        style="@style/TextColor_grey_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="2017-05-06"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_line_white">

            <TextView
                android:id="@+id/adapter_comment_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@mipmap/pay_address_location"
                android:gravity="center"
                android:padding="5dp"
                android:text="1272"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>