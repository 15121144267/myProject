<?xml version="1.0" encoding="utf-8"?>
<com.banshengyuan.feima.view.customview.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8"
        >

        <CheckBox
            android:id="@+id/item_shopping_card_check"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/selector_check"
            />

        <ImageView
            android:id="@+id/item_shopping_card_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/freemud_logo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shopping_card_des"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_default_des"
                android:textColor="@color/tab_text_normal"
                android:textSize="@dimen/sp_13"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_shopping_card_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥0.00"
                    android:textColor="@color/light_red"
                    android:textSize="@dimen/sp_13"
                    />

                <LinearLayout
                    android:id="@+id/item_shopping_card_count_layout"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape_line_blod"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/item_shopping_card_reduce"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="—"
                        />

                    <View style="@style/LineV_Fill_Width1"/>

                    <TextView
                        android:id="@+id/item_shopping_card_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        />

                    <View style="@style/LineV_Fill_Width1"/>

                    <TextView
                        android:id="@+id/item_shopping_card_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="+"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_shopping_card_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:text="删除"
            android:visibility="gone"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/item_shopping_card__slip_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@android:color/white"/>

</com.banshengyuan.feima.view.customview.SwipeMenuView>